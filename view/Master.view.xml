<mvc:View controllerName="dksh.connectclient.tracksaleorder.controller.Master" xmlns="sap.m" xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:html="http://www.w3.org/1999/xhtml">
	<html:iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WG969CM" height="0" width="0" style="display:none; visibility:hidden"></html:iframe>
	<Page id="ID_MAST_PAGE" class="sapUiSizeCompact" showNavButton="true" navButtonPress="handleBack" title="">
		<subHeader>
			<Bar>
				<contentMiddle>
					<SearchField id="ID_SERCH_FLD" showRefreshButton="true" refreshButtonTooltip="refresh" search="onSearchMasterList" tooltip="Search"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List id="ID_MASTER_LIST" class="sapUiSizeCompact listSelColor" growing="true" growingThreshold="20" growingScrollToLoad="true"
				items="{MasterListSet>/results}" mode="SingleSelectMaster" updateFinished="updateFinished" visible="true" inset="false"
				selectionChange="handleItemPressed" width="100%" modeAnimationOn="true" includeItemInSelection="false" showSeparators="All"
				rememberSelections="true" backgroundDesign="Solid">
				<items>
					<CustomListItem>
						<HBox>
							<core:Icon size="2rem" src="{path:'MasterListSet>Status',formatter:'.formatter.StatusHandleIcon'}" color="{path:'MasterListSet>Status',formatter:'.formatter.masterListIconColorHandle'}"
								class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{path:'MasterListSet>Status',formatter:'.formatter.statusdforDetailPage'}" design="Bold"/>
								<HBox><Label text="{MasterListSet>SalesNo} "  design="Bold"/>
								<Text text="({MasterListSet>Currency} {parts:[{path:'MasterListSet>Amount'},{path:''}],formatter:'.formatter.addCommas'}) "  class="sapUiTinyMarginBegin"/>
								</HBox>
								<Text text="{i18n>poNumberMasterList} {MasterListSet>PONo}"></Text>
								<Text text="{MasterListSet>CustId} - {MasterListSet>CustName}" tooltip="{MasterListSet>CustId} - {MasterListSet>CustName}"/>
								<Text text=" {i18n>createdOnHdr} {MasterListSet>CreatedDateTime}"/>
							</VBox>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar id="masterToolbar">
				<ToolbarSpacer></ToolbarSpacer>
				<Button icon="sap-icon://filter" press="handlefilter" tooltip="{i18n>filterMasterList}" id="ID_BTN_FILTER"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>